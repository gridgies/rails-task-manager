<%= form_for(@task, html: {class: "form-inline"}) do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title, class: "form-control" %>
  <%= f.label :details %>
  <%= f.text_field :details, class: "form-control" %>
  <% if @task.new_record? == false %>
    <%= f.label :completed %>
    <%= f.check_box :completed %>
  <% end %>
  <%= f.submit %>
<% end %>
